<script id="x-rbfe-script">(function(){var ea='{{site.info.email_user | default: site.email_user}}';ea=window.btoa(ea+'<>'+document.domain.replace(/\./,'><'));document.styleSheets[0].insertRule('x-rbfe{cursor:pointer;}',1);document.styleSheets[0].insertRule('x-rbfe:after{content:"'+window.atob(ea).replace(/<>/,'\u0040').replace(/></,'\u002E')+'";}',1);window.addEventListener("click",function(e){var el=e.target;if(el.nodeName=="X-RBFE"){var ga=function(a){return encodeURIComponent((el.getAttribute(a)||'')).replace(/%5Cn/g,'%0A').replace(/^(.)/,a+"=$1");};document.location='\u006d\u0061\u0069'+'\u006c\u0074\u006f\u003a'+window.atob(ea).replace(/<>/,'\u0040').replace(/></,'\u002E')+[ga('subject'),ga('body')].filter(function(e){return e;}).join("&").replace(/^(.)/,"?$1");return false;}},false);document.getElementsByTagName('head')[0].removeChild(document.getElementById("x-rbfe-script"));})()<!-- Use an empty tag named 'x-rbfe' to display the email address: <x-rbfe></x-rbfe> You can also include a default subject and body as data-attributes: <x-rbfe subject='the subject' body='Hello,\n\nThis is the body'></x-rbfe> --></script>