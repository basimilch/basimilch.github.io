<script id="x-rbfe-script">(function(){var tn='x-rbfe',eu='{{site.info.email_user | default: site.email_user}}',ea=window.btoa(eu+'<>'+document.domain.replace(/\./,'><'));document.styleSheets[0].insertRule(tn+'{cursor:pointer;}',1);document.styleSheets[0].insertRule(tn+':before{content:"'+eu+'\u0040";}',1);document.styleSheets[0].insertRule(tn+':after{content:"'+document.domain+'";}',1);window.addEventListener("click",function(e){var el=e.target;if(el.nodeName.toUpperCase()==tn.toUpperCase()){var ga=function(a){return encodeURIComponent((el.getAttribute(a)||'')).replace(/%5Cn/g,'%0A').replace(/^(.)/,a+"=$1");};document.location='\u006d\u0061\u0069'+'\u006c\u0074\u006f\u003a'+window.atob(ea).replace(/<>/,'\u0040').replace(/></,'\u002E')+[ga('subject'),ga('body')].filter(function(e){return e;}).join("&").replace(/^(.)/,"?$1");return false;}},false);document.getElementsByTagName('head')[0].removeChild(document.getElementById("x-rbfe-script"));})()<!-- To display the email address, use an empty tag of the name defined in the variable "tn" above, e.g.: <x-rbfe></x-rbfe>. You can also include a default subject and body as attributes: <x-rbfe subject='the subject' body='Hello,\n\nThis is the body'></x-rbfe> --></script>